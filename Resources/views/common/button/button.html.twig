{% if type == 'edit' %}
    <a href="{{url}}{{app.request.query.all|queryString}}" class="button button-rounded button-action button-tiny">{{text}}</a>
{% elseif type == 'view' %}
    <a href="{{url}}{{app.request.query.all|queryString}}" class="button button-border button-rounded button-primary button-tiny">{{text}}</a>
{% elseif type == 'delete' %}
    <a href="{{url}}{{app.request.query.all|queryString}}" class="button button-border button-rounded button-caution button-tiny delete_single_button" data-title="{{dataTitle|default('删除')}}" data-message="{{dataMessage|default('您确定删除此数据吗?所有与之关联的数据都会被删除')}}">{{text}}</a>
{% elseif type == 'create' %}
    <button type="button" class="btn btn-success"><i class="fa fa-magic"></i>&nbsp;新建</button>
{% elseif type == 'search' %}
    <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;搜索</button>
{% elseif type == 'reset' %}
    <button type="button" class="btn btn-danger form-reset"><i class="fa fa-trash-o"></i>&nbsp;清空</button>
{% elseif type == 'button' %}
    <button type="button" class="{{ class|default('button button-border button-rounded button-primary button-tiny') }}"
    {% for attrname, attrvalue in attr %}{{ attrname }}="{{ attrvalue }}"{% endfor %}>
        <i class="{{ icon|default('') }}"></i>&nbsp;{{ text }}
    </button>
{% endif %}