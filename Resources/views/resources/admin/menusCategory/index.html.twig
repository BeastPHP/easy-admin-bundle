{% extends '@BeastEasyAdmin/layouts/base.html.twig' %}
{% block body %}
    <main class="main">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">菜单组管理</li>
        </ol>

        <div class="container-fluid">
            <div class="main-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-block">
                                <a href="{{path('beast_admin_menus_category_edit')}}">
                                    {% include "@BeastEasyAdmin/common/button/button.html.twig" with {'type':'create'} %}
                                </a>
                            </div>
                            <div class="card-block">
                                <table class="table table-bordered table-striped table-condensed table-responsive-lg">
                                    <thead>
                                        <tr>
                                            <th width="5%">#</th>
                                            <th width="15%">名称</th>
                                            <th width="15%">排序</th>
                                            <th width="15%">创建时间</th>
                                            <th width="15%">操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for object in pagination %}
                                        <tr>
                                            <td>{{object.id}}</td>
                                            <td>{{object.name}}</td>
                                            <td>{{object.sort}}</td>
                                            <td>{{object.createdAt|date('Y-m-d H:i:s')}}</td>
                                            <td>
                                                {% include "@BeastEasyAdmin/common/button/button.html.twig" with
                                                    {
                                                        'url': path('beast_admin_menus_category_edit',{'id':object.id}),
                                                        'text': '编辑',
                                                        'type': 'edit'
                                                    }
                                                %}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan='5' align='center'>暂无数据</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            {{knp_pagination_render(pagination)}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}