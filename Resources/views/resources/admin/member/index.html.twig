{% extends '@BeastEasyAdmin/layouts/base.html.twig' %}
{% block body %}
    <main class="main">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">用户管理</li>
        </ol>

        <div class="container-fluid">
            <div class="main-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-block">
                                <a href="{{ path('beast_admin_member_user_edit') }}">
                                    {% include "@BeastEasyAdmin/common/button/button.html.twig" with {'type':'create'} %}
                                </a>
                            </div>
                            <div class="card-block">
                                <table class="table table-bordered table-striped table-condensed table-responsive-lg">
                                    <thead>
                                    <tr>
                                        <th width="5%">#</th>
                                        <th width="13%">激活状态</th>
                                        <th width="13%">账号</th>
                                        <th width="15%">上次登录时间</th>
                                        <th width="15%">操作</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for object in pagination %}
                                        <tr>
                                            <td>{{ object.id }}</td>
                                            <td>
                                                {%
                                                    include "@BeastEasyAdmin/common/default/listIsActive.html.twig" with
                                                    {
                                                        'isActive': object.IsActive,
                                                        'url'     : path('beast_admin_member_user_change_active_status', {'id': object.Id})
                                                    }
                                                %}
                                            </td>
                                            <td>{{ object.username }}</td>
                                            <td>
                                                {% if object.lastLogin %}
                                                    {{ object.lastLogin|date('Y-m-d H:i:s') }}
                                                {% else %}
                                                    从未登陆过
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% include "@BeastEasyAdmin/common/button/button.html.twig" with
                                                    {
                                                        'url': path('beast_admin_member_user_edit',{'id':object.id}),
                                                        'text': '编辑',
                                                        'type': 'edit'
                                                    } %}
                                                {% include "@BeastEasyAdmin/common/button/button.html.twig" with
                                                    {
                                                        'url': path('beast_admin_member_user_delete',{'ids':object.id}),
                                                        'text': '删除',
                                                        'type': 'delete'
                                                    } %}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan='6' align='center'>暂无数据</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                {{ knp_pagination_render(pagination) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}